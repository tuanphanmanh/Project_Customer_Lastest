@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dxcontent_list">
	<div class="content-header content-title">
		<div class="action-area">
			@Html.DevExpress().Button(settings =>
			{
				settings.Name = "btnAdd";
				settings.Text = "Add New";
                settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ActionsAdd16x16;
				settings.ClientSideEvents.Click = "Add";
			}).GetHtml()
		</div>
        <h1>Production Plan Management</h1>
        <div style="clear: both"></div>
	</div>

    <div class="content-header">
        @Html.Partial("_TB_R_PRODUCTION_PLAN_MSearch")
    </div>

	@Html.Partial("_TB_R_PRODUCTION_PLAN_MList")

    <div class="content-header content-title">
        <div class="action-area" style="float: right; margin-right: 2px; margin-top: 0px">
            <button class="btn btn-primary btn-xs" type="button" onclick="DOWNLOAD_PP_TEMPLATE(); return false;">
                <i class="fa fa-download"></i>Production Plan Template</button>
        </div>
        <div class="action-area" style="float: right; margin-right: 2px; margin-top: 0px">
            <button class="btn btn-primary btn-xs" type="button" onclick="IMPORT_PRODUCTION_PLAN(); return false;">
                <i class="fa fa-upload"></i>Upload</button>
        </div>
    </div>

    @Html.DevExpress().PopupControl(settings =>
    {
        settings.HeaderText = "IMPORT PRODUCTION PLAN";
        settings.Name = "popPRODUCTION_PLAN";
        settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
        settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
        settings.Modal = true;
        settings.ShowCloseButton = true;
        settings.PopupAnimationType = AnimationType.Fade;
        settings.Width = System.Web.UI.WebControls.Unit.Pixel(500);
        settings.Style.Add("background-color", "rgba(0, 0, 0, 0.5)");
        settings.SetContent(() =>
        {
            Html.RenderPartial("_TB_R_PRODUCTION_PLAN_MImport");
        });
        settings.ClientSideEvents.CloseUp = "OnPopPRODUCTION_PLANCloseUp";
    }).GetHtml()

	@Html.DevExpress().PopupControl(settings =>
    {
        settings.HeaderText = "TB_R_PRODUCTION_PLAN_M Management";
        settings.Name = "popTB_R_PRODUCTION_PLAN_M";
        settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
        settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
        settings.Modal = true;
        settings.ShowCloseButton = true;
        settings.PopupAnimationType = AnimationType.Fade;
        settings.Width = System.Web.UI.WebControls.Unit.Pixel(500);
        settings.Style.Add("background-color", "rgba(0, 0, 0, 0.5)");
        settings.SetContent(() =>
        {
            Html.RenderPartial("_TB_R_PRODUCTION_PLAN_MEdit");
        });
        settings.ClientSideEvents.CloseUp = "OnPopTB_R_PRODUCTION_PLAN_MCloseUp";
    }).GetHtml()

	@section HeadScript {
		<script src="@Url.Content("~/Content/Scripts/App/TB_R_PRODUCTION_PLAN_M.js")" type="text/javascript"></script>
	}
</div>
