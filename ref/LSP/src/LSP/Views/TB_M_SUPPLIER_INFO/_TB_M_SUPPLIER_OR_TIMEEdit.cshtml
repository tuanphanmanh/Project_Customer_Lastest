@*
---Phần Edit form, CssClass Validate
    --Class (.hide) thẻ cha nếu bỏ qua

TextBox : .val-required (Check Null), .val-integer (Check Integer)
TimeEdit : .val-time (Check định dạng time)
*@
<table class="edit-form DL_TIME">
	<tr>
        <td class="label"> 
			ORDER SEQ  
		</td>
        <td>
            @Html.DevExpress().SpinEdit(
            settings =>
            {
                settings.Name = "_ORDER_SEQ";
                settings.Width = 200;
                settings.Properties.SpinButtons.ShowIncrementButtons = true;
                settings.Properties.Increment = 1;
                settings.Properties.NumberType = SpinEditNumberType.Integer;
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			ORDER TYPE   
		</td>
        <td>
             @Html.DevExpress().RadioButtonList(settings =>
             {
                 settings.Name = "_ORDER_TYPE";             
                 settings.Properties.Items.Add("Daily", "D");
                 settings.Properties.Items.Add("Weekly", "W");                          
                 settings.Properties.Items.Add("Monthly", "M");                          
                 settings.Properties.RepeatDirection = System.Web.UI.WebControls.RepeatDirection.Horizontal;             
                 settings.SelectedIndex = 1;
             }).GetHtml()		            
			<span class="messageerror"></span>
        </td>
    </tr>
	<tr>
        <td class="label"> 
			ORDER TIME  
		</td>
        <td>
            
            @Html.DevExpress().TimeEdit(
                settings => {
                    settings.Name = "_ORDER_TIME";
                    settings.Width = 200;
                    settings.Properties.DisplayFormatString = "HH:mm:ss";
                    settings.Properties.EditFormatString = "HH:mm:ss"; 
                }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			RECEIVE TIME  
		</td>
        <td>
            
            @Html.DevExpress().TimeEdit(
                settings => {
                    settings.Name = "_RECEIVE_TIME";
                    settings.Width = 200;
                    settings.Properties.DisplayFormatString = "HH:mm:ss";
                    settings.Properties.EditFormatString = "HH:mm:ss"; 
                }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			RECEIVING DAY (D + n) (or Day in Month/Week)
		</td>
        <td>
            @Html.DevExpress().SpinEdit(
            settings =>
            {
                settings.Name = "_RECEIVING_DAY";
                settings.Width = 200;
                settings.Properties.SpinButtons.ShowIncrementButtons = true;
                settings.Properties.Increment = 1;
                settings.Properties.NumberType = SpinEditNumberType.Integer;
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			KEIHEN TIME  
		</td>
        <td>
            
            @Html.DevExpress().TimeEdit(
                settings => {
                    settings.Name = "_KEIHEN_TIME";
                    settings.Width = 200;
                    settings.Properties.DisplayFormatString = "HH:mm:ss";
                    settings.Properties.EditFormatString = "HH:mm:ss"; 
                }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			KEIHEN DAY (D + n)
		</td>
        <td>            
            @Html.DevExpress().SpinEdit(
                settings => {
                    settings.Name = "_KEIHEN_DAY";
                    settings.Width = 200;
                    settings.Properties.SpinButtons.ShowIncrementButtons = true;
                    settings.Properties.Increment = 1;
                    settings.Properties.NumberType = SpinEditNumberType.Integer;
                    settings.ControlStyle.CssClass = "textbox";                    
                }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
	 
	<tr>
        <td class="label"> 
			IS ACTIVE  
		</td>
        <td>
           @Html.DevExpress().CheckBox(
            settings =>
            { 
                settings.Name = "_T_IS_ACTIVE";
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>

    <tr>
        <td colspan="2" style="padding-top: 20px;">
            <div style="float: right; margin-right: 20px;">
                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnOR_TimeCancel";
                    settings.ControlStyle.CssClass = "button";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "OnBtnOR_TimeCancelClicked";
                }).GetHtml()
            </div>
            <div style="float: right; margin-right: 5px">
			 @if (Html.Toyota().Authorization.IsAuthorizedToAccessFeature
				 (Html.Toyota().Page.ControllerName.ToString(), "Edit"))
                {
					@Html.DevExpress().Button(settings =>
					{
                        settings.Name = "btnOR_TimeUpdate";
						settings.ControlStyle.CssClass = "button";
						settings.Text = "Save";
						settings.UseSubmitBehavior = true;
                        settings.ClientSideEvents.Click = "function(s, e){ OnBtnOR_TimeUpdateClicked(this) }";
					}).GetHtml()
				}
            </div>
            <span id="userStatus" class="action-status"></span>
        </td>
    </tr>
</table>

