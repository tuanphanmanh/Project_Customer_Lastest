                {
                    Html.RenderPartial("_TB_R_SUPPLIER_INFOImport");
                });
                settings.ClientSideEvents.CloseUp = "OnPopSUPPLIER_INFOCloseUp";
            }).GetHtml()


                @Html.DevExpress().PopupControl(settings =>
                    {
                        settings.HeaderText = "TB_M_SUPPLIER_INFO Management";
