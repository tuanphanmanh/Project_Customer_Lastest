@*
---Phần Search trên form
TextBox : .textbox, .autobind (cho ô find gia tri tu dong)
DateEdit : .textdate
ComboBox : .textcombobox
*@
<div class="dxcontent_search">    
    <div class="itembox">
		<label class="placehoder">MONTH</label>
			@Html.DevExpress().DateEdit(settings => 
			{
                settings.Name = "_txtORDER_MONTH";
                settings.Properties.EditFormat = EditFormat.Custom;
                settings.Properties.EditFormatString = "MM/yyyy";
                settings.Properties.DisplayFormatString = "MM/yyyy";
                settings.ControlStyle.CssClass = "dateedit textdate autobind";
                settings.Date = DateTime.Now;
                settings.Properties.CalendarProperties.ShowClearButton = false;
                settings.Width = 90;
			}).GetHtml() 
    </div>
    <div class="itembox">
		<label class="placehoder">WORKING DATE</label>
			@Html.DevExpress().DateEdit(settings => 
			{
                settings.Name = "_txtWORKING_DATE";
				settings.ControlStyle.CssClass = "dateedit textdate";
                settings.Properties.EditFormatString = "MM/dd/yyyy";
                settings.Properties.DisplayFormatString = "MM/dd/yyyy";
			}).GetHtml() 
    </div>
     
    <div class="itembox">
		<label class="placehoder">SUPPLIER CODE</label>
			@Html.DevExpress().TextBox(settings =>
			{
				settings.Name = "_txtSUPPLIER_CODE";
				settings.ControlStyle.CssClass = "textbox";
			}).GetHtml()
    </div>
        
    <div class="itembox">
		<label class="placehoder">ORDER NO</label>
			@Html.DevExpress().TextBox(settings =>
			{
				settings.Name = "_txtORDER_NO";
				settings.ControlStyle.CssClass = "textbox";
			}).GetHtml()
    </div>
        
    <div class="itembox">
		<label class="placehoder">PART NO</label>
			@Html.DevExpress().TextBox(settings =>
			{
				settings.Name = "_txtPART_NO";
				settings.ControlStyle.CssClass = "textbox";
			}).GetHtml()
    </div>
    
    <div class="itembox">    
		@if (Html.Toyota().Authorization.IsAuthorizedToAccessFeature
			(Html.Toyota().Page.ControllerName.ToString(), "Search"))
		{	
			@Html.DevExpress().Button(settings =>
			{
				settings.Name = "btnSearch";
				settings.Text = "Search";
                settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ActionsSearch16x16devav;
                settings.ClientSideEvents.Click = "DoSearch";
			}).GetHtml()
		}
    </div>

    <div class="itembox">    
		@if (Html.Toyota().Authorization.IsAuthorizedToAccessFeature
			(Html.Toyota().Page.ControllerName.ToString(), "Search"))
		{	            
			@Html.DevExpress().Button(settings =>
			{
				settings.Name = "btnClearSearch";
				settings.Text = "Clear";
                settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ActionsRefresh216x16office2013;   
                settings.ClientSideEvents.Click = "ClearSearch";
            }).GetHtml();
                     
		}
    </div>
</div>
