@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dxcontent_list">
	<div class="content-header content-title">
		<div class="action-area">
			@Html.DevExpress().Button(settings =>
			{
				settings.Name = "btnAdd";
				settings.Text = "Add New";
                settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ActionsAdd16x16;
				settings.ClientSideEvents.Click = "Add";
			}).GetHtml()
		</div>
        <h1>Truck Booking Management</h1>
        <div style="clear: both"></div>
	</div>

    <div class="content-header">
        @Html.Partial("_TB_R_TRUCK_BOOKING_DSearch")
    </div>

	@Html.Partial("_TB_R_TRUCK_BOOKING_DList")

	@Html.DevExpress().PopupControl(settings =>
    {
        settings.HeaderText = "TB_R_TRUCK_BOOKING_D Management";
        settings.Name = "popTB_R_TRUCK_BOOKING_D";
        settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
        settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
        settings.Modal = true;
        settings.ShowCloseButton = true;
        settings.PopupAnimationType = AnimationType.Fade;
        settings.Width = System.Web.UI.WebControls.Unit.Pixel(500);
        settings.Style.Add("background-color", "rgba(0, 0, 0, 0.5)");
        settings.SetContent(() =>
        {
            Html.RenderPartial("_TB_R_TRUCK_BOOKING_DEdit");
        });
        settings.ClientSideEvents.CloseUp = "OnPopTB_R_TRUCK_BOOKING_DCloseUp";
    }).GetHtml()

	@section HeadScript {
		<script src="@Url.Content("~/Content/Scripts/App/TB_R_TRUCK_BOOKING_D.js")" type="text/javascript"></script>
	}
</div>

