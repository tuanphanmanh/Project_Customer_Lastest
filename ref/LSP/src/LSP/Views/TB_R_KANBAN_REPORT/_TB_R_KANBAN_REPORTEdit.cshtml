@*
---Phần Edit form, CssClass Validate
    --Class (.hide) thẻ cha nếu bỏ qua

TextBox : .val-required (Check Null), .val-integer (Check Integer)
TimeEdit : .val-time (Check định dạng time)
*@
<table class="edit-form KANBAN_REPORT">	
	<tr>
        <td class="label"> 
			SUPPLIER CODE  
		</td>
        <td>
            @Html.DevExpress().TextBox(settings =>
            {
                settings.Name = "_SUPPLIER_CODE";
                settings.Width = 200;
                settings.ReadOnly = true;
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>    
	<tr>
        <td class="label"> 
			ORDER NO
		</td>
        <td>
            @Html.DevExpress().TextBox(settings =>
            {
                settings.Name = "_ORDER_NO";
                settings.Width = 200;
                settings.ReadOnly = true;
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>
	<tr>
        <td class="label"> 
			CONTENT NO 
		</td>
        <td>
            @Html.DevExpress().TextBox(settings =>
            {
                settings.Name = "_CONTENT_NO";
                settings.Width = 200;
                settings.ReadOnly = true;
                settings.ControlStyle.CssClass = "textbox";
            }).GetHtml()
			<span class="messageerror"></span>
        </td>
    </tr>				
	<tr>
        <td class="label"> 
			RECEIVING PIC  
		</td>
        <td>
            @Html.DevExpress().TextBox(
            settings =>
            {
                settings.Name = "_RECEIVING_PIC";
                settings.ControlStyle.CssClass = "textbox";
                settings.Width = 200;
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			RECEIVING CAUSE
		</td>
        <td>
            @Html.DevExpress().Memo(
            settings =>
            {
                settings.Name = "_RECEIVING_CAUSE";
                settings.ControlStyle.CssClass = "editor";
                settings.Width = 200;
                settings.Properties.MaxLength = 200;
                settings.Height = System.Web.UI.WebControls.Unit.Pixel(50);
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>
     <tr>
        <td class="label"> 
			COUTERMEASURE
		</td>
        <td>
            @Html.DevExpress().Memo(
            settings =>
            {
                settings.Name = "_RECEIVING_COUTERMEASURE";
                settings.ControlStyle.CssClass = "editor";
                settings.Width = 200;
                settings.Properties.MaxLength = 200;
                settings.Height = System.Web.UI.WebControls.Unit.Pixel(50);
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			PIC ACTION
		</td>
        <td>
            @Html.DevExpress().Memo(
            settings =>
            {
                settings.Name = "_RECEIVING_PIC_ACTION";
                settings.ControlStyle.CssClass = "editor";
                settings.Width = 200;
                settings.Properties.MaxLength = 200;
                settings.Height = System.Web.UI.WebControls.Unit.Pixel(50);
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>
    <tr>
        <td class="label"> 
			RESULT
		</td>
        <td>
            @Html.DevExpress().Memo(
            settings =>
            {
                settings.Name = "_RECEIVING_PIC_RESULT";
                settings.ControlStyle.CssClass = "editor";
                settings.Width = 200;
                settings.Properties.MaxLength = 200;
                settings.Height = System.Web.UI.WebControls.Unit.Pixel(50);
            }).GetHtml() 
			<span class="messageerror"></span>
        </td>
    </tr>
    
    <tr>
        <td colspan="2" style="padding-top: 20px;">
            <div style="float: right; margin-right: 130px;">
                @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.ControlStyle.CssClass = "button";
                    settings.Text = "Cancel";
                    settings.ClientSideEvents.Click = "OnBtnCancelClicked";
                    settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ActionsCancel16x16;
                }).GetHtml()
            </div>
            <div style="float: right; margin-right: 5px">
			 @if (Html.Toyota().Authorization.IsAuthorizedToAccessFeature
				 (Html.Toyota().Page.ControllerName.ToString(), "Edit"))
                {
					@Html.DevExpress().Button(settings =>
					{
						settings.Name = "btnUpdate";
						settings.ControlStyle.CssClass = "button";
						settings.Text = "Save";
						settings.UseSubmitBehavior = true;
                        settings.Images.Image.IconID = DevExpress.Web.ASPxThemes.IconID.SaveSave16x16;
						settings.ClientSideEvents.Click = "function(s, e){ OnBtnUpdateClicked(this) }";
					}).GetHtml()
				}
            </div>
            <span id="userStatus" class="action-status"></span>
        </td>
    </tr>
</table>