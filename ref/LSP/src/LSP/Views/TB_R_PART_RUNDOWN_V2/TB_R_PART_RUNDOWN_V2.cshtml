@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        try {

            $(".UI_Tab .titleframe").click(function () {
                var _href = $(this).attr("href");
                document.location.href = _href;                
            });

        } catch (ex) {
            console.error(ex.message, null);
        }
    });

</script>
